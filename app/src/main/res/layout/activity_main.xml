<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <ImageView
            android:id="@+id/addSongsButton"
            android:padding="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_name"
            android:onClick="addSongs" />

        <ImageView
            android:id="@+id/burgerButton"
            android:padding="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/burgermenu"
            android:onClick="goToMenu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/albumImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/photoalbum"

            />

        <TextView
            android:id="@+id/titleSongTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/albumImageView"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="Song"

            />

        <TextView
            android:id="@+id/titleArtistTextView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:text="add your songs..."
            android:textSize="19sp" />

    </LinearLayout>

    <!-- TODO 22.02 #2 -->

    <FrameLayout
        android:id="@+id/songsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:background="@drawable/backgroundplayerlist"
        android:layout_alignTop="@id/playerPanelLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/playerPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroundplayer"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/listSongsBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/playlist"
            android:onClick="listSongs"
            android:padding="10dp"
            android:background="?selectableItemBackgroundBorderless"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/test_dimen"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/super_left_padding"
                android:layout_marginRight="0dp"
                android:src="@drawable/speeakeroff" />

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:max="100"
                android:progress="50" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/speeakeron" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/prevSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:padding="8dp"
                    android:src="@drawable/leftarrow"
                    android:onClick="playPrevBtnOnClick"
                    android:background="?selectableItemBackgroundBorderless"

                    />

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/playBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/playbutton"
                    android:onClick="playBtnOnClick" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/prevBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/rightarrow"
                    android:onClick="playNextBtnOnClick"
                    android:padding="8dp"
                    android:background="?selectableItemBackgroundBorderless"
                    tools:ignore="OnClick" />
            </FrameLayout>

        </LinearLayout>




        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:layout_marginTop="20dp"
                android:id="@+id/positionBar"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                />

            <TextView
                android:layout_alignLeft="@id/positionBar"
                android:layout_alignParentTop="true"
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_alignRight="@id/positionBar"
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />


    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/share"
                    android:padding="8dp"
                    android:onClick="shareBtnOnClick"
                    android:background="?selectableItemBackgroundBorderless"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/repeatImageView"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/repeat2"
                    android:onClick="repeatBtnOnClick" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView

                    android:id="@+id/shuffleImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="shufleBtnOnClick"
                    android:padding="8dp"
                    android:src="@drawable/shuffle"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/more" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weightLossModeLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/songsLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_weight_loss_button"
        android:orientation="vertical"
        android:translationY="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|top"
            android:text="\nWeight\nLoss Mode\n"
            android:textAllCaps="true"
            android:textColor="#FF5C47"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|top"
            android:text="Off"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>