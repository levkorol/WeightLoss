<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/addSongsButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_action_name"
            android:onClick="addSongs" />

        <ImageButton
            android:id="@+id/burgerButton"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/burgermenu"
            android:onClick="goToMenu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/albumImageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/photoalbum"

            />

        <TextView
            android:id="@+id/titleSongTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/albumImageView"
            android:layout_gravity="center"
            android:text="Song"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"

            />

        <TextView
            android:id="@+id/titleArtistTextView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:text="Artist"
            android:textSize="19sp" />
    </LinearLayout>

    <!-- TODO 22.02 #2 -->

    <LinearLayout
        android:id="@+id/playerPanelLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/backgroundplayer"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/listSongsBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/playlist"
            android:onClick="listSongs" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/speeakeroff" />

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:max="100"
                android:progress="50" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/speeakeron" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50" />

            <ImageButton
                android:id="@+id/prevSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/leftarrow"
                android:gravity="center"
                android:onClick="playPrevBtnOnClick"
                tools:ignore="OnClick" />

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playbutton"
                android:gravity="center"
                android:onClick="playBtnOnClick"
                android:elevation="4dp"

                />

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rightarrow"
                android:gravity="center"
                android:onClick="playNextBtnOnClick"
                tools:ignore="OnClick" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />


        </LinearLayout>

        <SeekBar
            android:id="@+id/positionBar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="80dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share"
                android:onClick="shareBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat2"
                android:onClick="repeatBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shuffle"
                android:onClick="shufleBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_weight_loss_button"
        android:layout_above="@id/playerPanelLayout"
        android:layout_centerHorizontal="true"
        android:translationY="50dp"
        android:layout_width="100dp"
        android:orientation="vertical"
        android:layout_height="100dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|top"
            android:text="\nWeight\nLoss Mode\n"
            android:textAllCaps="true"
            android:textColor="#FF5C47"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|top"
            android:text="Off"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>