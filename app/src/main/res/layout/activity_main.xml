<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/equalizer"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="100" />

        <ImageButton
            android:id="@+id/burgerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/burgermenu"
            android:onClick="goToMenu" />

    </LinearLayout>

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hightwey to Hell"
        android:textSize="19sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="AC/DC"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgroundplayer"
        android:layout_marginTop="25dp">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/playlist"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:onClick="btnListAudio"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/speeakeroff"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="30dp"/>

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:max="100"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"/>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/speeakeron"
                android:layout_marginRight="30dp"/>













        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50"/>
            <ImageButton
                android:id="@+id/prevSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftarrow"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="70dp"
                android:layout_height="0dp"/>
            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playbutton"
                android:gravity="center"
                android:onClick="playBtnOnClick"/>
            <View
                android:layout_width="70dp"
                android:layout_height="0dp"/>
            <ImageButton
                android:id="@+id/nextSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rightarrow"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:11"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1:11"
                android:layout_marginLeft="270dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>


        </LinearLayout>

        <SeekBar
            android:id="@+id/positionBar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="75dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share"
                />
        <View
            android:layout_width="85dp"
            android:layout_height="0dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat2"/>
            <View
                android:layout_width="85dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shuffle"/>
            <View
                android:layout_width="85dp"
                android:layout_height="0dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>