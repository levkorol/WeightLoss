<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/equalizer"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="100" />

        <ImageButton
            android:id="@+id/burgerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/burgermenu"
            android:onClick="goToMenu" />

    </LinearLayout>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hightwey to Hell"
        android:textSize="19sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="AC/DC"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"

        android:background="@drawable/backgroundplayer"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/playlist"
            android:onClick="btnListAudio"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/speeakeroff" />

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:max="100"
                android:progress="50" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/speeakeron" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50" />

            <ImageButton
                android:id="@+id/prevSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/leftarrow"
                android:gravity="center"
                android:onClick="playPrevBtnOnClick"
                tools:ignore="OnClick" />

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playbutton"
                android:gravity="center"
                android:onClick="playBtnOnClick"
                android:elevation="4dp"
                />

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rightarrow"
                android:gravity="center"
                android:onClick="playNextBtnOnClick"
                tools:ignore="OnClick" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="10sp" />


        </LinearLayout>

        <SeekBar
            android:id="@+id/positionBar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="75dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share"
                android:onClick="shareBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/repeat2"
                android:onClick="repeatBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shuffle"
                android:onClick="shufleBtnOnClick"/>

            <View
                android:layout_width="85dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>